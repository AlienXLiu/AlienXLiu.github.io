<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="app.name" value="alienX"/>

	<!-- 业务日志路径-->
	<property name="logging.path" value="alienX"/>
	<!-- 系统日志路径-->
	<!--<property name="system.log" value="system"/>-->

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS}\t[%thread]\t%-5level\t%logger\t-\t%X{loanNo} %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>



	<logger name="org.apache.http" level="info" additivity="true"/>
	<logger name="com.qf.ndes.dao" level="info" additivity="true"/>

	<!-- <logger name="org.springframework.kafka" level="debug" additivity="true"/>
	<logger name="org.apache.kafka" level="debug" additivity="true"/> -->

	<root level="info">
		<appender-ref ref="stdout" />
	</root>
	
</configuration>